<html>
    <head>
        <title>
            <%= title  %>
        </title>
        <base href="/">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <link rel="shortcut icon" href="https://img.favpng.com/25/10/11/flickr-icon-ico-icon-media-icon-png-favpng-e9rHPkJEXEjsnpLSs3avMWNex.jpg">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        
        <%- style %>
        
    </head>

    <body>

        <main id="layout-main">
            <%- body %>
        </main>


        <%- script %>

        <!-- defining the notification style -->
        <% if (flash.success && flash.success.length > 0) { %>
            <script>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show(); 
            </script>   
            <%} %>
            
         <% if (flash.error && flash.error.length > 0) {%>
                <script>
                    new Noty({
                        theme: 'relax',
                        text: "<%= flash.error %>",
                        type: 'error',
                        layout: 'topRight',
                        timeout: 1500
                        
                    }).show();  
                </script>
         <%} %>
        
    </body>
</html>